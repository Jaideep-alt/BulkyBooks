@model WebSiteApp.Models.Book
@{
    ViewData["Title"] = "Create";
}
<h2 class="text-info " style="padding: 10px; background-color:darkslategrey ; color: lightgray" >Create New Book</h2>
<hr />
<div class="table-bordered container col-lg-12" style="padding: 50px;margin-right:20px; background-color: lightgray">
    <div class="col-lg-10">
        <form asp-action="AddBook" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group row">

                <div class="col-sm-4">
                    <input type="hidden" asp-for="ID"/> 
                    <label asp-for="Name" class="control-label"></label>
                </div>
                <div class="col-sm-6">
                    <input asp-for="Name" class="form-control" />
                </div>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-sm-4">
                    <label asp-for="Author" class="control-label"></label>
                </div>
                <div class="col-sm-6">
                    <input asp-for="Author" class="form-control" />
                </div>
                <span asp-validation-for="Author" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-sm-4">
                    <label asp-for="ISBN" class="control-label"></label>
                </div>
                <div class="col-sm-6">
                    <input asp-for="ISBN" class="form-control" />
                </div>
                <span asp-validation-for="ISBN" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-sm-3 col-sm-offset-4">
                    <input type="submit" value="Save" class="btn btn-default form-control" style="background-color:darkslategrey; color:#ffffff" />
                </div>
                <div class="col-sm-3" style="margin-right:10px">
                    <a asp-action="GetBooks" class="btn btn-default form-control" style="background-color: darkcyan; color:#fff">Back to List</a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
